                            </div>
                            <form class="ui-form" name="" method="post" action="#" id="frmInfoDetail">
                                <fieldset>
                                    <div class="ui-form-item">
                                        <label for="" class="ui-label">
                                            <span class="ui-form-required"></span>活动编号
                                        </label>
                                        HD201801293
                                        <div class="ui-form-explain"></div>
                                    </div>

                                    <div class="ui-form-item">
                                        <label for="beginDate" class="ui-label"><span class="ui-form-required"></span>活动门店</label>
