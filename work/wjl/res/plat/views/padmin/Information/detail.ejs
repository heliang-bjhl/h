                                        <li><img class="loaded-img" src="<%=staticUrl%>/static/images/tmp/111.jpg"></li>
                                        <li><img class="loaded-img" src="<%=staticUrl%>/static/images/tmp/111.jpg"></li>
                                        <li><img class="loaded-img" src="<%=staticUrl%>/static/images/tmp/111.jpg"></li>
                                        <!-- 详情没有上传
                                           <li class="btn-upload">
                                               <img id="uploader-1" src="/static/images/upload.png" alt="点击上传">
                                           </li>
                                        -->
                                        </ul>
                                        <p class="ui-form-explain"></p>
                                    </div>
                                    
                                    <div class="ui-form-item ui-form-item-success">
                                        <label for="" class="ui-label"><span class="ui-form-required">*</span>活动描述</label>
                                        <textarea readonly="true" id="txtDescription" class="ui-textarea" placeholder="" required data-errormessage-required="请输入活动描述"></textarea>
                                        <!--
                                        <span class="ui-form-other"><a href="#" id="lblDescriptionMsg">还能输入1500个字</a></span>
                                        -->
                                        <div class="ui-form-explain"></div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                        
                    </div>
                </div>
