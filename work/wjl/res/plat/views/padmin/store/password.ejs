<% include ../../common/header.ejs %>
<link rel="stylesheet" href="<%=staticUrl%>/static/css/padmin/store_password.css">
</head>
<body class="store-password">
<% include ../../common/h5-header.ejs %>
<% include ../../common/header_menu.ejs %>
    <div id="wrap">
    	<div id="main" class="clearfix">
            <div id="content" class="content">
                <div class="ui-grid-row">
                    <div class="ui-grid-5 asidenav">
                        <%include ../includes/sidebar.ejs%>
                    </div>
                    <div class="ui-grid-20">
                        <div class="main">
                            <div class="ui-block ui-block-title">
                                <div class="ui-title ui-title-line fn-clear">
                                    <h3>商家修改密码</h3>
                                </div>
                            </div>
                            <form class="ui-form" name="frmStorePassword" method="post" action="/post_data" id="frmStorePassword">
                                <fieldset>
                                    <div class="ui-form-item">
                                        <label for="" class="ui-label">
                                            <span class="ui-form-required">*</span>旧密码
                                        </label>
                                        <input class="ui-input" type="password" id="txtPassword" name="password" placeholder="填写旧密码">
                                        <div class="ui-form-explain">旧密码为必填字段。</div>
                                    </div>
                                    <div class="ui-form-item">
                                        <label for="" class="ui-label">
                                            <span class="ui-form-required">*</span>新密码
                                        </label>
                                        <input class="ui-input" type="password" id="txtNewPassword" name="newPassword" placeholder="填写新密码">
                                        <div class="ui-form-explain">新密码为必填字段。</div>
                                    </div>
                                    <div class="ui-form-item">
                                        <label for="" class="ui-label">
                                            <span class="ui-form-required">*</span>再次输入新密码
                                        </label>
                                        <input class="ui-input" type="password" id="txtNewConfirmPassword" name="newConfirmpassword" placeholder="填写再次输入新密码">
                                        <div class="ui-form-explain">再次输入新密码为必填字段。</div>
                                    </div>
                                    <div class="ui-form-item">
                                        <input type="submit" id="btnSave" class="ui-button ui-button-morange" value="确定">
                                        <div class="ui-form-explain"></div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
		</div>
	</div>
<% include ../../common/script_footer.ejs %>
<script src="<%=staticUrl%>/static/js/padmin/store_password.js"></script>
<% include ../../common/footer.ejs %>