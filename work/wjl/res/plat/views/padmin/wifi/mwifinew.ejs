    <div id="main" class="clearfix">
        <div id="content" class="content">
            <div class="ui-grid-row">
                <div class="ui-grid-5 asidenav"><%include ../includes/sidebar.ejs%></div>
                <div class="ui-grid-20"><div class="loading" style="display: none;">努力加载中.......</div>
                    <div class="main">
                        <div class="ui-block ui-block-title">
                            <div class="ui-title ui-title-line fn-clear">
                                <h3>手机版Wifi营销新建广告</h3>
                            </div>
                            <form action="/ss" method="post" id="createFrm" >
                                <div class="search-code">
                                    选择页面频道：
                                    <input type="radio" checked="checked" name="" value="" placeholder="" />
                                    <label for="">首界面页</label>
                                    <input type="radio" name="" value="" placeholder="" />
